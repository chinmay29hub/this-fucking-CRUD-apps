<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add_user" class="border-shadow">
                <span class="text-gradient">New User <i class="fa-solid fa-user"></i></span>
            </a>
        </div>
        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>@Email</th>
                        <th>Gender</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < users.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= users[i].name %></td>
                        <td><%= users[i].email %></td>
                        <td><%= users[i].gender %></td>
                        <td><%= users[i].status %></td>
                        <td>
                            <a href="/update_user?id=<%= users[i]._id -%>" class="btn border-shadow update">
                                <span class="text-gradient"><i class="fa-solid fa-pencil"></i></span>
                            </a>
                            <a class="btn border-shadow delete" data-id=<%= users[i]._id -%>>
                                <span class="text-gradient"><i class="fa-solid fa-trash"></i></span>
                            </a>
                        </td>
                    </tr>
                    <% } %> 
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- /Main Site -->